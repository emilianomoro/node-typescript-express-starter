{
  "name": "node-typescript-express-starter",
  "version": "1.0.0",
  "description": "Starter server express nodejs with typescript",
  "scripts": {
    "dev": "nodemon",
    "start": "nodemon ./dist/index.js",
    "build": "npm-run-all -l -c -s prebuild lint compile",
    "prebuild": "rimraf ./dist",
    "compile": "tsc",
    "lint": "yarn lint:base ./src",
    "lint:base": "eslint --ext .js,.json,.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rudemex/node-typescript-express-starter.git"
  },
  "keywords": [
    "node",
    "nodejs",
    "express",
    "typescript",
    "js",
    "javascript"
  ],
  "author": {
    "name": "Maximiliano \"Mex\" Delgado",
    "email": "mdelgado@tresdoce.com.ar",
    "url": "https://rudemex.github.io/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rudemex/node-typescript-express-starter/issues"
  },
  "homepage": "https://github.com/rudemex/node-typescript-express-starter#readme",
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "printWidth": 80,
    "trailingComma": "all"
  },
  "lint-staged": {
    "src/**/*.{ts,js,json}": [
      "yarn lint:base --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "rimraf": "^3.0.2",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^14.6.3",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
